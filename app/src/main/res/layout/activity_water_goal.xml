<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.goalwater.WaterGoalActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/background_goal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:textColor="#2D43A8"
            android:textStyle="bold"
            android:textSize="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_80sdp"
            android:id="@+id/tv_water_goal"
            android:text="1900"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#2D43A8"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_93sdp"
            android:layout_toEndOf="@id/tv_water_goal"
            android:text="ml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_water_goal"
            android:layout_marginLeft="@dimen/_5sdp" />
        <Button
            android:id="@+id/btn_go"
            android:textColor="#FFF"
            android:background="@drawable/bg_button_userdata"
            android:text="ACCEPT"
            android:layout_marginBottom="@dimen/_45sdp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_40sdp"/>
    </RelativeLayout>

</FrameLayout>