<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#0000FFFF">
<androidx.cardview.widget.CardView
   android:layout_marginEnd="@dimen/_25sdp"
    android:layout_marginStart="@dimen/_25sdp"
    app:cardCornerRadius="10dp"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_190sdp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_remove_enought2"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/remove"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_20sdp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:src="@drawable/icon_sao"
                android:layout_toStartOf="@id/tv"
                android:layout_width="@dimen/_25ssp"
                android:layout_height="@dimen/_25sdp"
                android:layout_toLeftOf="@id/tv"
                android:layout_marginRight="@dimen/_2sdp" />

        <TextView

            android:id="@+id/tv"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_18ssp"
            android:textColor="#666666"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Congratulations!"/>
        <TextView
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:id="@+id/tv2"
            android:layout_below="@id/tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="#666666"
            android:textSize="@dimen/_12ssp"
          android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You drank enough water today."/>
            <ImageView
                android:layout_below="@id/tv2"
                android:src="@drawable/icon_water_full"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>