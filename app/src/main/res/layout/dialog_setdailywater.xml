<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#0000FFFF">
<androidx.cardview.widget.CardView
    android:layout_marginStart="25dp"
    android:layout_marginEnd="25dp"
    app:cardCornerRadius="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:id="@+id/tv_title_dialog2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="Daily Goal"
            android:textColor="#2329D6"
            android:textSize="@dimen/_16ssp"
           />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <EditText
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:maxLength="4"
                android:cursorVisible="false"
                android:backgroundTint="#E6ECFF"
                android:inputType="number"
                android:layout_centerHorizontal="true"
                android:id="@+id/edt_daily_gold"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="@dimen/_45ssp"
                android:textColorHint="#252450"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_ml2"
                android:layout_marginTop="@dimen/_13sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textSize="20sp"
                android:textColor="#252450"
                android:text="ml"
                android:layout_toRightOf="@+id/edt_daily_gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toEndOf="@+id/edt_daily_gold" />

        </RelativeLayout>
        <Button
            android:id="@+id/btn_accept_daily"
            android:layout_marginBottom="@dimen/_15sdp"
            android:textColor="#FFF"
            android:background="@drawable/round_bg"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Accept"
            android:layout_width="@dimen/_125sdp"
            android:layout_height="@dimen/_30sdp"/>
    </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>